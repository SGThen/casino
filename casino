//random number generator
function play() {
var die1 = Math.floor(Math.random() * 7) + 1;
var die2 = Math.floor(Math.random() * 7) + 1;
//how to the numbers from the dice to the page
var sum = die1+die2
//printing it on the page
document.write("Die 1 = " + die1)
document.write("<br/>")
document.write("Die 2 = " + die2)
document.write("<br/>")
document.write("Sum = " + sum)
document.write("<br/>")
//the outcome of win or lose
if (sum == 7 || sum == 11)
{ document.write("CRAPS - you lose")
document.write("<br/>")
}
else if (die1 == die2 && die1%2 == 0)
{

document.write("DOUBLES - you win")
document.write("<br/>")
}





}
//line break
